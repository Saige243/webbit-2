<% content_for :primary_content do %>
  <% if @submissions.any? %>
    <div id="submissions">
      <ul class="divide-y">
        <% @submissions.each do |submission| %>
          <%= render submission %>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="py-6 text-center">
      <span class="flex justify-center pb-4"><%= render_svg "icons/empty" %></span>
      <p class="mb-4">No submissions yet.</p>
      <%= link_to "Create a new submission", new_submission_path, class: "btn btn-indigo" %>
    </div>
  <% end %>
<% end %>

<% content_for :secondary_content do %>
  <%= link_to "New Submission", new_submission_path %>
<% end %>

<%= render "basic_layout" %>
