<% content_for :primary_content do %>
  <h1>Submissions</h1>

  <% if @submissions.any? %>
    <div id="submissions">
      <ul class="divide-y">
        <% @submissions.each do |submission| %>
          <%= render submission %>
        <% end %>
      </ul>
    </div>
  <% else %>
    <p>No submissions yet.</p>
  <% end %>
<% end %>

<% content_for :secondary_content do %>
  <%= link_to "New Submission", new_submission_path %>
<% end %>

<%= render "basic_layout" %>
